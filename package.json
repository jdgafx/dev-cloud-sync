{
  "name": "dev-cloud-sync",
  "version": "0.1.0",
  "description": "A comprehensive cloud file synchronization platform built with modern development practices",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/web",
    "tools/*"
  ],
  "scripts": {
    "extensions:install": "node scripts/manage-extensions.js",
    "build": "npm run build --workspaces --if-present",
    "start": "npm run dev",
    "dev": "npm run dev --workspaces --if-present",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "dev:setup": "docker-compose up -d postgres redis && dotenv -e .env -- npm run migrate -w @dev-cloud-sync/database",
    "dev:watch": "concurrently \"npm run dev --workspaces --if-present\"",
    "ui": "bash scripts/start-webui.sh",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.3",
    "shadcn": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/dev-cloud-sync.git"
  },
  "keywords": [
    "cloud-sync",
    "file-synchronization",
    "typescript",
    "nodejs",
    "postgresql",
    "redis"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/dev-cloud-sync/issues"
  },
  "homepage": "https://github.com/your-org/dev-cloud-sync#readme",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
