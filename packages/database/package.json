{
  "name": "@dev-cloud-sync/database",
  "version": "0.1.0",
  "description": "Database schemas and migrations for the dev-cloud-sync platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "migrate": "ts-node scripts/migrate.ts",
    "migrate:rollback": "ts-node scripts/rollback.ts",
    "migrate:reset": "ts-node scripts/reset.ts",
    "seed": "ts-node scripts/seed.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "knex": "^2.5.1"
  },
  "devDependencies": {
    "@types/knex": "^0.16.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
